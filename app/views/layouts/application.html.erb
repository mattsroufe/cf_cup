<!DOCTYPE html>
<html>
  <head>
    <title>CfCup</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

<link rel="preconnect" href="https://fonts.googleapis.com"> 
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin> 
<link href="https://fonts.googleapis.com/css2?family=Pacifico&family=Roboto+Condensed:wght@300;400&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag "application" %>
  </head>

  <body>
    <% if !current_page?(root_path) %>
      <nav>
        <%= link_to 'home', root_path %>
        <%= link_to 'Players', players_path %>
        <%= link_to 'Teams', teams_path %>
        <%= link_to 'Matches', matches_path %>
        <%= link_to 'Match Teams', match_teams_path %>
        <%= link_to 'Courses', courses_path %>
      </nav>
    <% end %>
    <%= yield %>
  </body>
</html>
