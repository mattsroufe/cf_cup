<%= content_tag :div, id: dom_id(player), style: "background-color: white; padding: 16px 8px; margin: 16px 8px; border-radius: 8px; box-shadow: var(--box-shadow)" do %>
  <%= content_tag :div, style: "display:flex; justify-content:space-around" do %>
    <%= image_tag "#{player.username}.png", height: 128, width: 128, style: "margin: 24px 24px 0 8px; border-radius:64px; box-shadow: 0 2px 2px 0 rgb(0 0 0 / 14%), 0 3px 1px -2px rgb(0 0 0 / 20%), 0 1px 5px 0 rgb(0 0 0 / 12%)" %>
    <%= content_tag :div do %>
      <h2><%= player.first_name %> <%= player.last_name %></h2>
      <div>Nickname: <%= player.nick_name %></div>
      <div>Home club: <%= player.home_club %></div>
      <div>Current handicap: <%= player.handicap %></div>
      <div>Trophies: <%= player.trophies %></div>
    <% end %>
  <% end %>
  <h3>Strengths</h3>
  <p><%= player.strengths %></p>
  <h3>Weaknesses</h3>
  <p><%= player.weaknesses %></p>
  <h3>Best C F Cup moment</h3>
  <p><%= player.best_moment %></p>
<% end %>
