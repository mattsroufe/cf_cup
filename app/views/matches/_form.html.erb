<%= form_with(model: match) do |form| %>
  <% if match.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(match.errors.count, "error") %> prohibited this match from being saved:</h2>

      <ul>
        <% match.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :course_id, style: "display: block" %>
    <%= form.select :course_id, options_from_collection_for_select(Course.all, 'id', 'name') %>
  </div>

  <div>
    <%= form.label :home_team_id, style: "display: block" %>
    <%= form.select :home_team_id, options_from_collection_for_select(Team.all, 'id', 'name') %>
  </div>

  <div>
    <%= form.label :away_team_id, style: "display: block" %>
    <%= form.select :away_team_id, options_from_collection_for_select(Team.all, 'id', 'name') %>
  </div>

  <div>
    <%= form.label :date, style: "display: block" %>
    <%= form.date_field :date %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
